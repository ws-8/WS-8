<p id="notice"><%= notice %></p>

<h1>Lesson Files</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Filename</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lesson_files.each do |lesson_file| %>
      <tr>
        <td><%= lesson_file.title %></td>
        <td><%= lesson_file.filename %></td>
        <td><%= lesson_file.comment %></td>
        <td><%= link_to 'Show', lesson_file %></td>
        <td><%= link_to 'Edit', edit_lesson_file_path(lesson_file) %></td>
        <td><%= link_to 'Destroy', lesson_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

