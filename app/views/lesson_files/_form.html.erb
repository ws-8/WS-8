<%= form_with(model: lesson_file, local: true) do |form| %>
  <% if lesson_file.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lesson_file.errors.count, "error") %> prohibited this lesson_file from being saved:</h2>
      <ul>
        <% lesson_file.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.hidden_field :lesson_id, value: @lesson.id %>
  </div>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :course_file_title ,class:"form-control"%>
  </div>
  <div class="form-group">
    <%= form.label :file, :class => 'control-label' %>
    <div class="controls">
      <%= form.file_field :file %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_area :comment, id: :course_file_comment, class:"form-control", rows:"3"%>
  </div>
  <div class="actions">
    <%= form.submit class:"btn btn-success"%>
  </div>
<% end %>
